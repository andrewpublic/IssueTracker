@model IEnumerable<IssueTracker.Models.Issue>

@{
    ViewBag.Title = "Inspect Issue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.UserEntityId)</th>
        <th>@Html.DisplayNameFor(model => model.SprintId)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.StartDate)</th>
        <th>@Html.DisplayNameFor(model => model.CompletionDate)</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.UserEntityId)</td>
        <td>@Html.DisplayFor(modelItem => item.SprintId)</td>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
        <td>@Html.DisplayFor(modelItem => item.CompletionDate)</td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id=item.IssueId }) |
            @Html.ActionLink("Details", "Retrieve", new { id=item.IssueId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IssueId })
        </td>
    </tr>
}
</table>
